<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- Service Status -->
        <TextView
            android:id="@+id/tvServiceStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/service_status_stopped"
            android:textSize="16sp"
            android:gravity="center"
            android:padding="8dp"
            android:background="@color/status_background"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" />

        <!-- API Configuration Section -->
        <TextView
            android:id="@+id/tvApiConfig"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/api_configuration"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tvServiceStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilApiUrl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/api_url_hint"
            app:layout_constraintTop_toBottomOf="@id/tvApiConfig"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etApiUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textUri"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnSaveUrl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/save_api_url"
            app:layout_constraintTop_toBottomOf="@id/tilApiUrl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Service Control Section -->
        <TextView
            android:id="@+id/tvServiceControl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/service_control"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/btnSaveUrl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" />

        <Button
            android:id="@+id/btnStartService"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/start_service"
            android:backgroundTint="@color/button_start"
            app:layout_constraintTop_toBottomOf="@id/tvServiceControl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btnStopService"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/stop_service"
            android:backgroundTint="@color/button_stop"
            app:layout_constraintTop_toBottomOf="@id/btnStartService"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Permissions Section -->
        <TextView
            android:id="@+id/tvPermissions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/permissions"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/btnStopService"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" />

        <TextView
            android:id="@+id/tvPermissionStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/checking_permissions"
            android:textSize="14sp"
            android:padding="8dp"
            android:background="@color/permission_background"
            app:layout_constraintTop_toBottomOf="@id/tvPermissions"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btnCheckPermissions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/check_permissions"
            app:layout_constraintTop_toBottomOf="@id/tvPermissionStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Instructions -->
        <TextView
            android:id="@+id/tvInstructions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/instructions"
            android:textSize="12sp"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/btnCheckPermissions"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
